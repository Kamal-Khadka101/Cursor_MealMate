<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MealMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MealMate.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MealMate.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MealMate.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MealMate.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MealMate.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MealMate.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MealMate.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MealMate.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MealMate.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MealMate.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MealMate.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MealMate.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MealMate.Overline</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.MealMate.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MealMate.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
